<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"  
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"  
    id="BookFinder" version="3.0">
  <description>rent sell</description>
  <display-name>Book</display-name>
  <servlet>
    <servlet-name>User</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LongConn</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.LongConnRegServlet</servlet-class>
    <async-supported>true</async-supported>
  </servlet>
  <servlet>
    <servlet-name>Signup</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.SignupServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ForgotPwd</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.ForgotPwdServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostList</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.post.PostListServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>BookDetail</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.BookDetailServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LikeAPost</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.post.LikeAPostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RequestBook</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.post.RequestBookServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>PostOrEditBook</servlet-name>
  	<servlet-class>com.wilddynamos.bookappserver.servlet.mybooks.PostEditBookServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>com.wilddynamos.bookappserver.servlet.DispatchRequestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>User</servlet-name>
    <url-pattern>/ServeUser</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/Login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LongConn</servlet-name>
    <url-pattern>/LongConn</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Signup</servlet-name>
    <url-pattern>/Signup</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/Logout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>ForgotPwd</servlet-name>
  	<url-pattern>/ForgotPwd</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PostList</servlet-name>
    <url-pattern>/GetPosts</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>BookDetail</servlet-name>
    <url-pattern>/GetBookDetail</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LikeAPost</servlet-name>
    <url-pattern>/Like</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RequestBook</servlet-name>
    <url-pattern>/RequestBook</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>PostOrEditBook</servlet-name>
  	<url-pattern>/PostEditBook</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/Test</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>
</web-app>